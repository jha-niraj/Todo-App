generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://firstpostgres-app_owner:X0QNwbes7zZj@ep-black-voice-a1nf9vm2.ap-southeast-1.aws.neon.tech/TodoApp?sslmode=require"
}

model Users {
	id Int @id @default(autoincrement())
	fullName String
	username String @unique
	password String
	todo Todos[]
}

model Todos {
	id Int @id @default(autoincrement())
	user_id Int
	title String
	description String
	done Boolean @default(false)
	user Users @relation(fields: [user_id], references: [id])
}
